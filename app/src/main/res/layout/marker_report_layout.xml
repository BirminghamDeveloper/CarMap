<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@color/textColorSecondary"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="14dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvType_marker_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xe đậu"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textColor="@color/background_front"
            android:textSize="30sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvDistance_marker_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cách 500m"
            android:textColor="@color/background_front"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvLocation_marker_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nguyễn Kiệm, Gò Vấp"
            android:textColor="@color/background_front" />

        <TextView
            android:id="@+id/tvDescription_marker_report"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="14dp"
            android:text="Mô tả ngắn gọn"
            android:textColor="@color/background_front"
            android:textSize="12sp"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="14dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imvType_marker_report"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="60dp"
            android:background="@drawable/bg_btn_report_hazard"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_report_hazard_stopped" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imvDownVote_marker_report"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_btn_no_stroke"
                android:padding="6dp"
                app:srcCompat="@drawable/dislike_pic_idle" />

            <ImageView
                android:id="@+id/imvUpVote_marker_report"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_btn_yes_stroke"
                android:padding="6dp"
                app:srcCompat="@drawable/like_pic_idle" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>