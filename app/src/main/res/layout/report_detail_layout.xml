<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal"
    android:weightSum="10"
    android:id="@+id/layoutReport_detail"
    android:visibility="gone"
    android:background="@color/background_front">
    <!--<TextView-->
        <!--android:layout_weight="1.5"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:text="1/10"-->
        <!--android:id="@+id/tvReport_order_report_detail"-->
        <!--android:gravity="center"-->
        <!--android:paddingStart="8dp"-->
        <!--android:paddingEnd="8dp"-->
        <!--android:textColor="@color/textColorPrimary"-->
        <!--android:textSize="6pt"/>-->
    <ImageView
        android:layout_weight="1.5"
        android:id="@+id/btnPrevious_report_detail"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_keyboard_arrow_left_white_48dp"
        android:background="@color/colorPrimary"/>
    <LinearLayout
        android:layout_weight="7"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imIcon_report_detail"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_report_accident"
                android:paddingStart="8dp"
                android:paddingEnd="0dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="3"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="0dp">
                <TextView
                    android:id="@+id/tvType_report_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loại report"
                    android:gravity="center_vertical"
                    android:textColor="@color/textColorPrimary"/>
                <TextView
                    android:id="@+id/tvDistance_report_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cách 10 m"
                    android:gravity="center_vertical"
                    android:textColor="@color/textColorSecondary"/>
                <TextView
                    android:id="@+id/tvAddress_report_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ"
                    android:gravity="center_vertical"
                    android:textColor="@color/textColorSecondary"/>
            </LinearLayout>
        </LinearLayout>
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="5"
            style="?android:attr/progressBarStyleHorizontal"
            android:progress="1"
            android:id="@+id/progressBar_report_detail"/>
    </LinearLayout>

    <ImageView
        android:layout_weight="1.5"
        android:id="@+id/btnNext_report_detail"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_keyboard_arrow_right_white_48dp"
        android:background="@color/colorPrimary"
        android:layout_gravity="end"/>

</LinearLayout>