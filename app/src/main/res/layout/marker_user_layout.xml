<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:background="@color/divider"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imvAvatar_marker_user"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_btn_report_hazard"
            android:padding="6dp"
            app:srcCompat="@drawable/ic_report_hazard_stopped"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName_marker_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="6dp"
                android:text="Tên"
                android:textAlignment="viewStart"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                android:textColor="@color/background_front"
                android:textSize="18sp" />

            <!--<TextView-->
            <!--android:id="@+id/tvDOB_marker_user"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="13/12/1996"-->
            <!--android:textAlignment="center"-->
            <!--android:textColor="@color/background_front"-->
            <!--android:textSize="14sp" />-->
            <TextView
                android:id="@+id/tvEmail_marker_user"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:paddingStart="6dp"
                android:text="Email"
                android:textAlignment="viewStart"
                android:textColor="@color/background_front" />
        </LinearLayout>

        <Button
            android:id="@+id/btnHello_marker_user"
            android:layout_width="120dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginStart="12dp"
            android:background="@drawable/bg_btn_yes_stroke"
            android:padding="6dp"
            android:text="Chào hỏi"
            android:textColor="@color/background_front" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/viewTouch_maker_user"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@color/background_front"
        android:orientation="vertical">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:clickable="false"
            android:src="@drawable/pic_hand_touch" />
    </LinearLayout>
</LinearLayout>