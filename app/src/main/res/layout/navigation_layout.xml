<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/colorPrimary">
    <ImageView
        android:id="@+id/imInstruction_navigation_layout"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_menu_grey_800_48dp"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/tvInstruction_navigation_layout"
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:textColor="@color/background_front"
        android:text="Đi thẳng"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical"/>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/background_front"
        android:layout_marginStart="4dp"/>


    <TextView
        android:id="@+id/tvDistance_navigation_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:gravity="center"
        android:text="10 m"
        android:textColor="@color/background_front"
        android:textSize="24sp"
        android:textStyle="bold" />

</LinearLayout>