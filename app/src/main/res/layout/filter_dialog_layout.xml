<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="240dp"
    android:layout_height="170dp"
    android:background="@drawable/bg_btn_gray"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imCLose_filter_dialog"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="right"
        android:src="@drawable/ic_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginStart="10dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_filter_car"
            android:padding="4dp"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="Tài xế khác" />

        <com.github.angads25.toggle.LabeledSwitch
            android:id="@+id/switchFilterCar_filter_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textSize="14sp"
            app:colorBorder="@color/dangerous"
            app:on="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginStart="10dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_filter_report" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="Báo cáo" />

        <com.github.angads25.toggle.LabeledSwitch
            android:id="@+id/switchFilterReport_filter_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textSize="14sp"
            app:colorBorder="@color/dangerous"
            app:on="false" />
    </LinearLayout>

</LinearLayout>